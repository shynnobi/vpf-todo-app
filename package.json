{
	"name": "vpf-todo-app",
	"private": true,
	"version": "0.4.0",
	"description": "A To-Do app based on Vite PowerFlow",
	"author": "Shynn",
	"repository": {
		"type": "git",
		"url": "git+http://github.com/shynnobi/vite-powerflow.git"
	},
	"homepage": "http://github.com/shynnobi/vite-powerflow#readme",
	"bugs": {
		"url": "http://github.com/shynnobi/vite-powerflow/issues"
	},
	"license": "MIT",
	"keywords": [
		"vite",
		"react",
		"typescript",
		"tailwindcss",
		"shadcn-ui",
		"starter-template",
		"zustand",
		"tanstack-query",
		"vitest",
		"playwright",
		"storybook",
		"eslint",
		"prettier",
		"development-workflow",
		"devcontainer",
		"husky",
		"testing"
	],
	"type": "module",
	"packageManager": "pnpm@10.6.5",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"test": "pnpm test:unit && pnpm test:e2e",
		"test:unit": "vitest --run",
		"test:e2e": "test -f /home/node/.cache/ms-playwright/chromium-*/chrome-linux/chrome || pnpm exec playwright install --with-deps chromium && playwright test",
		"test:e2e:ui": "pnpm exec playwright test --ui --ui-host 0.0.0.0 --ui-port 9324",
		"test:e2e:report": "pnpm exec playwright show-report --host 0.0.0.0 --port 9323",
		"reset-tests": "node scripts/reset-tests.js",
		"lint": "eslint . --ext ts,tsx,js,jsx",
		"lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"fix": "prettier --write . && eslint . --ext ts,tsx,js,jsx --fix",
		"type-check": "tsc --noEmit",
		"validate": "pnpm format:check && pnpm lint && pnpm type-check && pnpm test",
		"validate:visual": "./scripts/validate-with-indicators.sh",
		"prepare": "husky",
		"postinstall": "node -e \"try { require('child_process').execSync('git rev-parse --is-inside-work-tree', {stdio: 'ignore'}); } catch (e) { require('child_process').execSync('git init', {stdio: 'inherit'}); } process.exit(0);\" && git config core.hooksPath .husky && chmod +x .husky/*",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix --max-warnings=0"
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write"
		],
		"*.{css,scss}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.30.0",
		"@playwright/test": "^1.53.1",
		"@storybook/addon-a11y": "^9.0.14",
		"@storybook/addon-actions": "^9.0.8",
		"@storybook/addon-essentials": "^8.6.14",
		"@storybook/addon-measure": "^9.0.8",
		"@storybook/addon-themes": "^9.0.14",
		"@storybook/addon-viewport": "^9.0.8",
		"@storybook/blocks": "^8.6.14",
		"@storybook/experimental-addon-test": "^8.6.14",
		"@storybook/react": "^9.0.14",
		"@storybook/react-vite": "^9.0.14",
		"@storybook/test": "^8.6.14",
		"@storybook/test-runner": "^0.23.0",
		"@swc/core": "^1.12.7",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/jest-axe": "^3.5.9",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"@vitejs/plugin-react-swc": "^3.10.2",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.30.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-storybook": "^9.0.14",
		"glob": "^11.0.3",
		"globals": "^16.2.0",
		"husky": "^9.0.11",
		"jest-axe": "^10.0.0",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.2",
		"playwright": "^1.53.1",
		"prettier": "^3.6.2",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"rollup-plugin-visualizer": "^6.0.3",
		"storybook": "^9.0.14",
		"typescript": "^5.8.3",
		"vite": "^7.0.0",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"ignoredBuiltDependencies": [
			"@swc/core",
			"esbuild"
		],
		"overrides": {
			"rollup": "npm:@rollup/wasm-node",
			"esbuild": "npm:esbuild-wasm@latest"
		}
	},
	"dependencies": {
		"@radix-ui/react-alert-dialog": "^1.1.14",
		"@radix-ui/react-checkbox": "^1.3.2",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-popover": "^1.1.14",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"@rollup/rollup-darwin-arm64": "^4.44.2",
		"@tailwindcss/vite": "^4.1.11",
		"@tanstack/react-query": "^5.81.5",
		"@tanstack/react-query-devtools": "^5.81.5",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"lucide-react": "^0.525.0",
		"react-day-picker": "9.8.0",
		"react-icons": "^5.5.0",
		"react-router-dom": "^7.6.3",
		"rollup": "^4.44.2",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.3.5",
		"uuid": "^11.1.0",
		"zustand": "^5.0.6"
	}
}
