{
	"name": "vpf-todo-app",
	"private": true,
	"version": "1.1.0",
	"description": "A To-Do app based on Vite PowerFlow",
	"author": "Shynn",
	"repository": {
		"type": "git",
		"url": "git+http://github.com/shynnobi/vite-powerflow.git"
	},
	"homepage": "http://github.com/shynnobi/vite-powerflow#readme",
	"bugs": {
		"url": "http://github.com/shynnobi/vite-powerflow/issues"
	},
	"license": "MIT",
	"keywords": [
		"vite",
		"react",
		"typescript",
		"tailwindcss",
		"shadcn-ui",
		"starter-template",
		"zustand",
		"tanstack-query",
		"vitest",
		"playwright",
		"storybook",
		"eslint",
		"prettier",
		"development-workflow",
		"devcontainer",
		"husky",
		"testing"
	],
	"type": "module",
	"packageManager": "pnpm@10.6.5",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"test": "vitest run",
		"test:verbose": "vitest run --reporter verbose",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:verbose": "playwright test --trace on",
		"reset-tests": "node scripts/reset-tests.js",
		"lint": "eslint . --ext ts,tsx,js,jsx",
		"lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"fix": "prettier --write . && eslint . --ext ts,tsx,js,jsx --fix",
		"type-check": "tsc --noEmit",
		"validate": "pnpm format:check && pnpm lint && pnpm type-check && pnpm test",
		"prepare": "husky",
		"postinstall": "node -e \"try { require('child_process').execSync('git rev-parse --is-inside-work-tree', {stdio: 'ignore'}); } catch (e) { require('child_process').execSync('git init', {stdio: 'inherit'}); } process.exit(0);\" && git config core.hooksPath .husky && chmod +x .husky/*",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix --max-warnings=0"
		],
		"*.{json,yml,yaml,md}": [
			"prettier --write"
		],
		"*.{css,scss}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3",
		"@commitlint/cli": "^19.2.0",
		"@commitlint/config-conventional": "^19.2.0",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.24.0",
		"@playwright/test": "^1.51.1",
		"@storybook/addon-a11y": "^8.6.12",
		"@storybook/addon-actions": "^8.6.12",
		"@storybook/addon-essentials": "^8.6.12",
		"@storybook/addon-measure": "^8.6.12",
		"@storybook/addon-themes": "^8.6.12",
		"@storybook/addon-viewport": "^8.6.12",
		"@storybook/blocks": "^8.6.12",
		"@storybook/experimental-addon-test": "^8.6.12",
		"@storybook/react": "^8.6.12",
		"@storybook/react-vite": "^8.6.12",
		"@storybook/test": "^8.6.12",
		"@storybook/test-runner": "^0.22.0",
		"@swc/core": "^1.11.21",
		"@testing-library/jest-dom": "^6.4.2",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/react": "^19.1.1",
		"@types/react-dom": "^19.1.2",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.29.1",
		"@typescript-eslint/parser": "^8.29.1",
		"@vitejs/plugin-react-swc": "^3.8.1",
		"@vitest/browser": "3.1.1",
		"@vitest/coverage-v8": "^3.1.1",
		"@vitest/ui": "^3.1.1",
		"eslint": "^9.24.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-storybook": "^0.12.0",
		"glob": "^11.0.1",
		"globals": "^16.0.0",
		"husky": "^9.0.11",
		"jsdom": "^26.1.0",
		"lint-staged": "^15.5.1",
		"playwright": "^1.51.1",
		"prettier": "^3.2.5",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"rollup-plugin-visualizer": "^5.14.0",
		"storybook": "^8.6.12",
		"typescript": "^5.8.3",
		"vite": "^6.2.6",
		"vitest": "^3.1.1"
	},
	"pnpm": {
		"ignoredBuiltDependencies": [
			"@swc/core",
			"esbuild"
		],
		"overrides": {
			"rollup": "npm:@rollup/wasm-node",
			"esbuild": "npm:esbuild-wasm@latest"
		}
	},
	"dependencies": {
		"@radix-ui/react-dropdown-menu": "^2.1.7",
		"@radix-ui/react-slot": "^1.2.0",
		"@rollup/rollup-darwin-arm64": "^4.40.0",
		"@tailwindcss/vite": "^4.1.3",
		"@tanstack/react-query": "^5.74.3",
		"@tanstack/react-query-devtools": "^5.74.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.488.0",
		"react-icons": "^5.5.0",
		"react-router-dom": "^7.5.0",
		"rollup": "^4.40.0",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.1.3",
		"tw-animate-css": "^1.2.5",
		"uuid": "^11.1.0",
		"zustand": "^5.0.3"
	}
}
