{
	"name": "Node-TS (Compose)",
	"dockerComposeFile": ["../docker-compose.yml"],
	"service": "app",
	"workspaceFolder": "/workspaces/vpf-todo-app",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"installOhMyZsh": true,
			"upgradePackages": true
		},
		"ghcr.io/devcontainers-contrib/features/pnpm:2": {},
		"ghcr.io/devcontainers/features/github-cli:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"antfu.vite",
				"ms-playwright.playwright",
				"bradlc.vscode-tailwindcss",
				"vitest.explorer",
				"github.vscode-github-actions",
				"bierner.markdown-preview-mermaid-support"
			],
			"settings": {
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.insertSpaces": false,
				"editor.tabSize": 2,
				"files.eol": "\n"
			}
		}
	},
	"forwardPorts": [5173, 4000],
	"mounts": ["source=${localEnv:HOME}/.gitconfig,target=/home/node/.gitconfig,type=bind,readonly"],
	"postCreateCommand": "if [ -d .husky ]; then git config core.hooksPath .husky && chmod +x .husky/* 2>/dev/null || true; fi && echo 'Dev Container (Compose) ready. GITHUB_TOKEN should be loaded from .env.'",
	"remoteUser": "node"
}
